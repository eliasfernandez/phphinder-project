{% extends 'base.html.twig' %}

{% block title %}Search{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Search</h1>

        <form action="{{ path('app_search_results') }}" method="get" data-turbo-frame="results">
            <div class="input-group mb-3">
                <input
                    type="text"
                    name="q"
                    class="form-control"
                    placeholder="Enter search terms"
                    value="{{ query }}"
                    aria-label="Search"
                    autofocus
                >
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </form>

        <turbo-frame id="results">
            {% include 'search/_results.html.twig' with { results: results } %}
        </turbo-frame>
    </div>
{% endblock %}